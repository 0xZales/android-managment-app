<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:stretchColumns="0,1,2,3"
    tools:context=".Menu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:id="@+id/connexion"
        android:layout_margin="50dp"
        android:gravity="center"
        android:textStyle="bold"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ptig"
        android:text="PROGRAMME TIG"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_below="@id/connexion"
        android:backgroundTint="@color/material_dynamic_secondary10"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>


    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pisi"
        android:text="PROGRAMME ISI"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_below="@id/ptig"
        android:backgroundTint="@color/material_dynamic_secondary10"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pmil"
        android:text="PROGRAMME MIL"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_below="@id/pisi"
        android:backgroundTint="@color/material_dynamic_secondary10"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit"
        android:text="EXIT"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_below="@id/pmil"
        android:backgroundTint="@color/material_dynamic_secondary10"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>


</RelativeLayout>